{
  "name": "menubook",
  "version": "0.3.0",
  "description": "Menu Book - Recipe cost calculator monorepo",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "test": "turbo test",
    "test:watch": "turbo test -- --watch",
    "test:coverage": "turbo test -- --coverage",
    "dev": "turbo dev",
    "dev:cli": "pnpm --filter @menubook/cli dev",
    "dev:app": "pnpm --filter @menubook/app dev",
    "dev:web": "pnpm --filter @menubook/web dev",
    "lint": "turbo lint",
    "format": "prettier --write \"packages/**/*.{ts,tsx,js,jsx,json}\" \"apps/**/*.{ts,tsx,js,jsx,json}\"",
    "clean": "turbo clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@tsconfig/node16": "^16.1.8",
    "prettier": "^3.5.0",
    "prettier-plugin-organize-imports": "^4.3.0",
    "turbo": "^2.5.0",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@10.22.0",
  "engines": {
    "node": ">=18"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3"
    ]
  }
}
