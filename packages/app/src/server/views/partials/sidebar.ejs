<!-- Sidebar -->
<aside class="w-64 bg-base-100 border-r border-base-300 flex flex-col">
  <!-- Logo/Header -->
  <div class="px-6 py-4 border-b border-base-300">
    <h1 class="text-xl font-bold text-base-content">ðŸ“– Menu Book</h1>
  </div>

  <!-- Navigation -->
  <nav class="flex-1 px-4 py-6 space-y-1">
    <!-- Dashboard -->
    <a
      href="/app/dashboard"
      hx-get="/app/dashboard"
      hx-target="#content-area"
      hx-push-url="true"
      class="nav-link flex items-center px-3 py-2 text-sm font-medium rounded-md <%= currentView === 'dashboard' ? 'text-primary-content bg-primary hover:bg-primary-focus' : 'text-base-content hover:bg-base-200' %>"
    >
      <svg
        class="w-5 h-5 mr-3"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"
        />
      </svg>
      Dashboard
    </a>

    <!-- Management Section -->
    <div class="space-y-1">
      <button
        id="management-toggle"
        class="nav-link flex items-center justify-between w-full px-3 py-2 text-sm font-medium rounded-md text-base-content hover:bg-base-200"
      >
        <span class="flex items-center">
          <svg
            class="w-5 h-5 mr-3"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"
            />
          </svg>
          Management
        </span>
        <svg
          id="management-chevron"
          class="w-4 h-4 transform transition-transform <%= ['suppliers', 'ingredients', 'recipes'].includes(currentView) ? 'rotate-180' : '' %>"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M19 9l-7 7-7-7"
          />
        </svg>
      </button>

      <!-- Sub-navigation -->
      <div id="management-subnav" class="<%= ['suppliers', 'ingredients', 'recipes'].includes(currentView) ? '' : 'hidden' %> pl-11 space-y-1">
        <a
          href="/app/suppliers"
          hx-get="/app/suppliers"
          hx-target="#content-area"
          hx-push-url="true"
          class="nav-link block px-3 py-2 text-sm font-medium rounded-md <%= currentView === 'suppliers' ? 'text-base-content bg-base-200' : 'text-base-content/70 hover:bg-base-200 hover:text-base-content' %>"
        >
          Suppliers
        </a>
        <a
          href="/app/ingredients"
          hx-get="/app/ingredients"
          hx-target="#content-area"
          hx-push-url="true"
          class="nav-link block px-3 py-2 text-sm font-medium rounded-md <%= currentView === 'ingredients' ? 'text-base-content bg-base-200' : 'text-base-content/70 hover:bg-base-200 hover:text-base-content' %>"
        >
          Ingredients
        </a>
        <a
          href="/app/recipes"
          hx-get="/app/recipes"
          hx-target="#content-area"
          hx-push-url="true"
          class="nav-link block px-3 py-2 text-sm font-medium rounded-md <%= currentView === 'recipes' ? 'text-base-content bg-base-200' : 'text-base-content/70 hover:bg-base-200 hover:text-base-content' %>"
        >
          Recipes
        </a>
      </div>
    </div>

    <!-- Margins -->
    <a
      href="/app/margins"
      hx-get="/app/margins"
      hx-target="#content-area"
      hx-push-url="true"
      class="nav-link flex items-center px-3 py-2 text-sm font-medium rounded-md <%= currentView === 'margins' ? 'text-primary-content bg-primary hover:bg-primary-focus' : 'text-base-content hover:bg-base-200' %>"
    >
      <svg
        class="w-5 h-5 mr-3"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
        />
      </svg>
      Margins
    </a>

    <!-- Settings -->
    <a
      href="/app/settings"
      hx-get="/app/settings"
      hx-target="#content-area"
      hx-push-url="true"
      class="nav-link flex items-center px-3 py-2 text-sm font-medium rounded-md <%= currentView === 'settings' ? 'text-primary-content bg-primary hover:bg-primary-focus' : 'text-base-content hover:bg-base-200' %>"
    >
      <svg
        class="w-5 h-5 mr-3"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"
        />
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"
        />
      </svg>
      Settings
    </a>

    <!-- Help -->
    <a
      href="/app/help"
      hx-get="/app/help"
      hx-target="#content-area"
      hx-push-url="true"
      class="nav-link flex items-center px-3 py-2 text-sm font-medium rounded-md <%= currentView === 'help' ? 'text-primary-content bg-primary hover:bg-primary-focus' : 'text-base-content hover:bg-base-200' %>"
    >
      <svg
        class="w-5 h-5 mr-3"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
        />
      </svg>
      Help
    </a>
  </nav>

  <script>
    // Management submenu toggle
    document.getElementById('management-toggle')?.addEventListener('click', function() {
      const subnav = document.getElementById('management-subnav');
      const chevron = document.getElementById('management-chevron');
      subnav.classList.toggle('hidden');
      chevron.classList.toggle('rotate-180');
    });
  </script>
</aside>
