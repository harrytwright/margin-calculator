<!-- Ingredient Form Modal Content -->
<div class="modal-header bg-gray-50 px-6 py-4 border-b border-gray-200 rounded-t-lg">
  <div class="flex items-center justify-between">
    <h3 class="text-lg font-semibold text-gray-900">
      <%= ingredient ? 'Edit Ingredient' : 'Add New Ingredient' %>
    </h3>
    <button
      onclick="closeModal()"
      class="text-gray-400 hover:text-gray-600 transition-colors"
    >
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>
  </div>
</div>

<form
  hx-<%= ingredient ? 'put' : 'post' %>="/management/ingredients<%= ingredient ? '/' + ingredient.slug : '' %>"
  hx-target="#entity-list"
  hx-swap="innerHTML"
  class="flex-1 overflow-y-auto"
>
  <div class="px-6 py-4 space-y-4">
    <!-- Name -->
    <div>
      <label for="name" class="block text-sm font-medium text-gray-700 mb-1">
        Ingredient Name <span class="text-red-500">*</span>
      </label>
      <input
        type="text"
        id="name"
        name="name"
        value="<%= ingredient ? ingredient.name : '' %>"
        required
        class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
        placeholder="e.g., Tomatoes, Flour, Cheese"
      />
    </div>

    <!-- Category & Supplier Row -->
    <div class="grid grid-cols-2 gap-4">
      <!-- Category -->
      <div>
        <label for="category" class="block text-sm font-medium text-gray-700 mb-1">
          Category <span class="text-red-500">*</span>
        </label>
        <input
          type="text"
          id="category"
          name="category"
          value="<%= ingredient ? ingredient.category : '' %>"
          required
          class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
          placeholder="e.g., Vegetables, Dairy"
        />
      </div>

      <!-- Supplier Dropdown -->
      <div>
        <label for="supplierId" class="block text-sm font-medium text-gray-700 mb-1">
          Supplier <span class="text-red-500">*</span>
        </label>
        <select
          id="supplierId"
          name="supplierId"
          required
          <%= ingredient ? 'disabled' : '' %>
          class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent <%= ingredient ? 'bg-gray-100' : '' %>"
        >
          <option value="">Select a supplier...</option>
          <% if (typeof suppliers !== 'undefined') { %>
            <% suppliers.forEach(supplier => { %>
              <option
                value="<%= supplier.id %>"
                <%= ingredient && ingredient.supplierId === supplier.id ? 'selected' : '' %>
              >
                <%= supplier.name %>
              </option>
            <% }); %>
          <% } %>
        </select>
        <% if (ingredient) { %>
        <p class="mt-1 text-xs text-gray-500">Supplier cannot be changed after creation</p>
        <% } %>
      </div>
    </div>

    <!-- Purchase Cost & Unit Row -->
    <div class="grid grid-cols-2 gap-4">
      <!-- Purchase Cost -->
      <div>
        <label for="purchaseCost" class="block text-sm font-medium text-gray-700 mb-1">
          Purchase Cost (pence) <span class="text-red-500">*</span>
        </label>
        <input
          type="number"
          id="purchaseCost"
          name="purchaseCost"
          value="<%= ingredient ? ingredient.purchaseCost : '' %>"
          required
          min="0"
          step="1"
          class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
          placeholder="e.g., 350 for Â£3.50"
        />
      </div>

      <!-- Purchase Unit -->
      <div>
        <label for="purchaseUnit" class="block text-sm font-medium text-gray-700 mb-1">
          Purchase Unit <span class="text-red-500">*</span>
        </label>
        <input
          type="text"
          id="purchaseUnit"
          name="purchaseUnit"
          value="<%= ingredient ? ingredient.purchaseUnit : '' %>"
          required
          class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
          placeholder="e.g., kg, L, box"
        />
      </div>
    </div>

    <!-- VAT Checkbox -->
    <div class="flex items-center">
      <input
        type="checkbox"
        id="includesVat"
        name="includesVat"
        value="1"
        <%= ingredient && ingredient.includesVat === 1 ? 'checked' : '' %>
        class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded"
      />
      <label for="includesVat" class="ml-2 block text-sm text-gray-700">
        Purchase cost includes VAT
      </label>
    </div>

    <!-- Conversion Rule -->
    <div>
      <label for="conversionRule" class="block text-sm font-medium text-gray-700 mb-1">
        Conversion Rule
      </label>
      <input
        type="text"
        id="conversionRule"
        name="conversionRule"
        value="<%= ingredient ? (ingredient.conversionRule || '') : '' %>"
        class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
        placeholder="e.g., 1 box = 24 bags"
      />
      <p class="mt-1 text-xs text-gray-500">Optional: Custom unit conversion rules</p>
    </div>

    <!-- Notes -->
    <div>
      <label for="notes" class="block text-sm font-medium text-gray-700 mb-1">
        Notes
      </label>
      <textarea
        id="notes"
        name="notes"
        rows="3"
        class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
        placeholder="Additional notes..."
      ><%= ingredient ? (ingredient.notes || '') : '' %></textarea>
    </div>
  </div>

  <!-- Modal Footer -->
  <div class="modal-footer bg-gray-50 px-6 py-4 border-t border-gray-200 rounded-b-lg flex justify-end gap-3">
    <button
      type="button"
      onclick="closeModal()"
      class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-blue-500"
    >
      Cancel
    </button>
    <button
      type="submit"
      class="px-4 py-2 text-sm font-medium text-white bg-blue-600 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500"
    >
      <%= ingredient ? 'Update Ingredient' : 'Create Ingredient' %>
    </button>
  </div>
</form>

<script>
  // Close modal after successful form submission
  document.body.addEventListener('htmx:afterRequest', function(event) {
    if (event.detail.successful && event.target.tagName === 'FORM') {
      closeModal();
      showToast('<%= ingredient ? 'Ingredient updated successfully' : 'Ingredient created successfully' %>', 'success');
    }
  });
</script>
