{
  "name": "@menubook/app",
  "version": "0.3.0",
  "description": "Web server and API for Menu Book",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "npm run build:css && tsc -p tsconfig.build.json && npm run postbuild",
    "build:css": "tailwindcss -i ./public/styles/input.css -o ./public/styles/output.css --minify",
    "postbuild": "cp -r public dist/ && cp -r views dist/",
    "dev": "concurrently \"npm run build:css:watch\" \"tsc -w -p tsconfig.build.json\"",
    "build:css:watch": "tailwindcss -i ./public/styles/input.css -o ./public/styles/output.css --watch",
    "test": "jest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "serve": "node ../cli/dist/index.js ui --no-open",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@harrytwright/api": "^2.0.0-beta.28",
    "@harrytwright/cli-config": "^2.1.0-beta.1",
    "@harrytwright/logger": "^3.2.0-beta.2",
    "@hndlr/erred": "^0.1.0-beta.5",
    "@hndlr/errors": "^0.1.0",
    "@isaacs/ttlcache": "2.1.4",
    "@menubook/core": "workspace:*",
    "@paralleldrive/cuid2": "^2.3.1",
    "@sentry/node": "^10.10.0",
    "@sentry/profiling-node": "^10.10.0",
    "@sindresorhus/slugify": "^3.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.6",
    "dotenv": "^17.2.3",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "glob-to-regexp": "^0.4.1",
    "htmx.org": "^2.0.8",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.2.0",
    "kysely": "^0.28.7",
    "on-finished": "^2.4.1",
    "on-headers": "^1.1.0",
    "open": "^10.2.0",
    "prom-client": "^15.1.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@menubook/sqlite": "workspace:*",
    "@playwright/test": "^1.50.0",
    "@types/cookie-parser": "^1.4.8",
    "@types/ejs": "^3.1.5",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.7.0",
    "@types/on-finished": "^2.3.5",
    "@types/supertest": "^6.0.3",
    "concurrently": "^9.1.2",
    "daisyui": "^4.12.24",
    "jest": "^30.2.0",
    "supertest": "^7.1.4",
    "tailwindcss": "^3.4.19",
    "ts-jest": "^29.4.4",
    "typescript": "^5.9.3",
    "yaml": "^2.8.0"
  },
  "files": [
    "dist"
  ]
}
