{
  "name": "@menubook/app",
  "version": "0.3.0",
  "description": "Web server and API for Menu Book",
  "main": "dist/server/index.js",
  "types": "dist/server/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/server/index.d.ts",
      "default": "./dist/server/index.js"
    }
  },
  "scripts": {
    "build": "npm run build:css && tsc -p tsconfig.build.json && npm run postbuild",
    "build:css": "tailwindcss -i ./src/server/public/styles/input.css -o ./src/server/public/styles/output.css --minify",
    "postbuild": "cp -r src/server/public dist/server/ && cp -r src/server/views dist/server/",
    "dev": "concurrently \"npm run build:css:watch\" \"tsc -w -p tsconfig.build.json\"",
    "build:css:watch": "tailwindcss -i ./src/server/public/styles/input.css -o ./src/server/public/styles/output.css --watch",
    "test": "jest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "serve": "node ../cli/dist/index.js ui --no-open",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@harrytwright/logger": "^3.2.0-beta.2",
    "@menubook/core": "workspace:*",
    "@sindresorhus/slugify": "^3.0.0",
    "cookie-parser": "^1.4.7",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "htmx.org": "^2.0.8",
    "kysely": "^0.28.7",
    "on-finished": "^2.4.1",
    "on-headers": "^1.1.0",
    "open": "^10.2.0",
    "prom-client": "^15.1.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@menubook/sqlite": "workspace:*",
    "@playwright/test": "^1.50.0",
    "@types/cookie-parser": "^1.4.8",
    "@types/ejs": "^3.1.5",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.7.0",
    "concurrently": "^9.1.2",
    "daisyui": "^4.12.24",
    "jest": "^30.2.0",
    "tailwindcss": "^3.4.19",
    "ts-jest": "^29.4.4",
    "typescript": "^5.9.3",
    "yaml": "^2.8.0"
  },
  "files": [
    "dist"
  ]
}
