<!-- Recipe Form Modal Content -->
<div class="modal-header bg-gray-50 px-6 py-4 border-b border-gray-200 rounded-t-lg">
  <div class="flex items-center justify-between">
    <h3 class="text-lg font-semibold text-gray-900">
      <%= recipe ? 'Edit Recipe' : 'Add New Recipe' %>
    </h3>
    <button
      onclick="closeModal()"
      class="text-gray-400 hover:text-gray-600 transition-colors"
    >
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>
  </div>
</div>

<form
  hx-<%= recipe ? 'put' : 'post' %>="/management/recipes<%= recipe ? '/' + recipe.slug : '' %>"
  hx-target="#entity-list"
  hx-swap="innerHTML"
  class="flex-1 overflow-y-auto"
>
  <div class="px-6 py-4 space-y-4">
    <!-- Name -->
    <div>
      <label for="name" class="block text-sm font-medium text-gray-700 mb-1">
        Recipe Name <span class="text-red-500">*</span>
      </label>
      <input
        type="text"
        id="name"
        name="name"
        value="<%= recipe ? recipe.name : '' %>"
        required
        class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
        placeholder="e.g., Margherita Pizza, Caesar Salad"
      />
    </div>

    <!-- Category & Class Row -->
    <div class="grid grid-cols-2 gap-4">
      <!-- Category -->
      <div>
        <label for="category" class="block text-sm font-medium text-gray-700 mb-1">
          Category
        </label>
        <input
          type="text"
          id="category"
          name="category"
          value="<%= recipe ? (recipe.category || '') : '' %>"
          class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
          placeholder="e.g., Pizza, Salad, Dessert"
        />
      </div>

      <!-- Class -->
      <div>
        <label for="class" class="block text-sm font-medium text-gray-700 mb-1">
          Class <span class="text-red-500">*</span>
        </label>
        <select
          id="class"
          name="class"
          required
          class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
        >
          <option value="menu_item" <%= recipe && recipe.class === 'menu_item' ? 'selected' : '' %>>Menu Item</option>
          <option value="base_template" <%= recipe && recipe.class === 'base_template' ? 'selected' : '' %>>Base Template</option>
          <option value="sub_recipe" <%= recipe && recipe.class === 'sub_recipe' ? 'selected' : '' %>>Sub Recipe</option>
        </select>
      </div>
    </div>

    <!-- Price & Margin Row -->
    <div class="grid grid-cols-2 gap-4">
      <!-- Sell Price -->
      <div>
        <label for="sellPrice" class="block text-sm font-medium text-gray-700 mb-1">
          Sell Price (pence) <span class="text-red-500">*</span>
        </label>
        <input
          type="number"
          id="sellPrice"
          name="sellPrice"
          value="<%= recipe ? recipe.sellPrice : '' %>"
          required
          min="0"
          step="1"
          class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
          placeholder="e.g., 850 for Â£8.50"
        />
      </div>

      <!-- Target Margin -->
      <div>
        <label for="targetMargin" class="block text-sm font-medium text-gray-700 mb-1">
          Target Margin (%)
        </label>
        <input
          type="number"
          id="targetMargin"
          name="targetMargin"
          value="<%= recipe ? (recipe.targetMargin || '') : '' %>"
          min="0"
          max="100"
          step="0.1"
          class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
          placeholder="e.g., 65"
        />
      </div>
    </div>

    <!-- VAT & Stage Row -->
    <div class="grid grid-cols-2 gap-4">
      <!-- VAT Checkbox -->
      <div class="flex items-center pt-6">
        <input
          type="checkbox"
          id="includesVat"
          name="includesVat"
          value="1"
          <%= recipe && recipe.includesVat === 1 ? 'checked' : 'checked' %>
          class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded"
        />
        <label for="includesVat" class="ml-2 block text-sm text-gray-700">
          Price includes VAT
        </label>
      </div>

      <!-- Stage -->
      <div>
        <label for="stage" class="block text-sm font-medium text-gray-700 mb-1">
          Stage
        </label>
        <select
          id="stage"
          name="stage"
          class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
        >
          <option value="development" <%= recipe && recipe.stage === 'development' ? 'selected' : '' %>>Development</option>
          <option value="active" <%= recipe && recipe.stage === 'active' ? 'selected' : 'selected' %>>Active</option>
          <option value="discontinued" <%= recipe && recipe.stage === 'discontinued' ? 'selected' : '' %>>Discontinued</option>
        </select>
      </div>
    </div>

    <!-- Yield (for sub-recipes) -->
    <div id="yield-fields" class="grid grid-cols-2 gap-4" style="display: none;">
      <div>
        <label for="yieldAmount" class="block text-sm font-medium text-gray-700 mb-1">
          Yield Amount
        </label>
        <input
          type="number"
          id="yieldAmount"
          name="yieldAmount"
          value="<%= recipe ? (recipe.yieldAmount || '') : '' %>"
          min="0"
          step="0.01"
          class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
          placeholder="e.g., 1"
        />
      </div>
      <div>
        <label for="yieldUnit" class="block text-sm font-medium text-gray-700 mb-1">
          Yield Unit
        </label>
        <input
          type="text"
          id="yieldUnit"
          name="yieldUnit"
          value="<%= recipe ? (recipe.yieldUnit || '') : '' %>"
          class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
          placeholder="e.g., L, kg, portion"
        />
      </div>
    </div>

    <p class="text-xs text-gray-500 bg-yellow-50 border border-yellow-200 rounded p-2">
      <strong>Note:</strong> Ingredient management coming soon! For now, this form creates/updates basic recipe details only.
    </p>
  </div>

  <!-- Modal Footer -->
  <div class="modal-footer bg-gray-50 px-6 py-4 border-t border-gray-200 rounded-b-lg flex justify-end gap-3">
    <button
      type="button"
      onclick="closeModal()"
      class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-blue-500"
    >
      Cancel
    </button>
    <button
      type="submit"
      class="px-4 py-2 text-sm font-medium text-white bg-blue-600 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500"
    >
      <%= recipe ? 'Update Recipe' : 'Create Recipe' %>
    </button>
  </div>
</form>

<script>
  // Show/hide yield fields based on class selection
  document.getElementById('class')?.addEventListener('change', function() {
    const yieldFields = document.getElementById('yield-fields');
    if (this.value === 'sub_recipe') {
      yieldFields.style.display = 'grid';
    } else {
      yieldFields.style.display = 'none';
    }
  });

  // Trigger on page load
  if (document.getElementById('class')?.value === 'sub_recipe') {
    document.getElementById('yield-fields').style.display = 'grid';
  }

  // Close modal after successful form submission
  document.body.addEventListener('htmx:afterRequest', function(event) {
    if (event.detail.successful && event.target.tagName === 'FORM') {
      closeModal();
      showToast('<%= recipe ? 'Recipe updated successfully' : 'Recipe created successfully' %>', 'success');
    }
  });
</script>
