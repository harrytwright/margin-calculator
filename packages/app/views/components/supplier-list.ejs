<% if (suppliers && suppliers.length > 0) { %>
<div class="card bg-base-100 shadow-warm overflow-hidden">
  <div class="overflow-x-auto">
    <table class="table">
      <thead>
        <tr class="bg-base-200/50">
          <th class="text-xs font-semibold uppercase tracking-wider text-base-content/60">Supplier</th>
          <th class="text-xs font-semibold uppercase tracking-wider text-base-content/60">Contact</th>
          <th class="text-xs font-semibold uppercase tracking-wider text-base-content/60">Ingredients</th>
          <th class="text-xs font-semibold uppercase tracking-wider text-base-content/60 text-right">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% suppliers.forEach((supplier) => { %>
        <tr class="table-row-hover hover:bg-base-200/30 transition-colors">
          <td>
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 rounded-lg bg-secondary/10 flex items-center justify-center">
                <span class="text-secondary font-semibold text-sm"><%= supplier.name.charAt(0).toUpperCase() %></span>
              </div>
              <div>
                <div class="font-medium text-base-content"><%= supplier.name %></div>
                <div class="text-xs text-base-content/50 font-mono"><%= supplier.slug %></div>
              </div>
            </div>
          </td>
          <td>
            <% if (supplier.contact || supplier.contactName || supplier.contactEmail) { %>
            <div class="text-sm text-base-content"><%= supplier.contactName || supplier.contact || '-' %></div>
            <% if (supplier.contactEmail) { %>
            <div class="text-xs text-base-content/50"><%= supplier.contactEmail %></div>
            <% } %>
            <% } else { %>
            <span class="text-sm text-base-content/40">-</span>
            <% } %>
          </td>
          <td>
            <% if (typeof supplier.ingredientCount !== 'undefined') { %>
            <span class="badge badge-secondary badge-outline">
              <%= supplier.ingredientCount %> ingredient<%= supplier.ingredientCount !== 1 ? 's' : '' %>
            </span>
            <% } else { %>
            <span class="text-sm text-base-content/40">-</span>
            <% } %>
          </td>
          <td class="text-right">
            <div class="flex items-center justify-end gap-1">
              <button
                hx-get="/management/suppliers/<%= supplier.slug %>/edit"
                hx-target=".modal-content"
                onclick="openModal()"
                class="btn btn-ghost btn-sm btn-square text-base-content/60 hover:text-primary"
                title="Edit"
              >
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                </svg>
              </button>
              <button
                onclick="confirmDelete('suppliers', '<%= supplier.slug %>', '<%= supplier.name %>')"
                class="btn btn-ghost btn-sm btn-square text-base-content/60 hover:text-error"
                title="Delete"
              >
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                </svg>
              </button>
            </div>
          </td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</div>
<% } else { %>
<!-- Empty State -->
<div class="card bg-base-100 shadow-warm">
  <div class="card-body items-center text-center py-16">
    <div class="w-16 h-16 rounded-2xl bg-secondary/10 flex items-center justify-center mb-4">
      <svg class="w-8 h-8 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
      </svg>
    </div>
    <h3 class="text-lg font-display text-base-content mb-2">No suppliers yet</h3>
    <p class="text-base-content/60 mb-6 max-w-sm">
      Suppliers help you track where your ingredients come from and their contact information.
    </p>
    <button
      hx-get="/management/suppliers/new"
      hx-target=".modal-content"
      onclick="openModal()"
      class="btn btn-primary shadow-warm"
    >
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
      </svg>
      Add Your First Supplier
    </button>
  </div>
</div>
<% } %>
