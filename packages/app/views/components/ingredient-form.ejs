<%
  const isEdit = typeof ingredient !== 'undefined' && ingredient !== null
%>

<!-- Modal Header -->
<div class="flex items-center justify-between px-6 py-4 border-b border-gray-200 dark:border-gray-700">
  <div>
    <h2 class="text-lg font-semibold text-gray-900 dark:text-white">
      <%= isEdit ? 'Edit Ingredient' : 'Add Ingredient' %>
    </h2>
    <p class="text-sm text-gray-500 dark:text-gray-400 mt-0.5">
      <%= isEdit ? 'Update ingredient details' : 'Add a new ingredient to your inventory' %>
    </p>
  </div>
  <button
    onclick="closeModal()"
    class="w-8 h-8 flex items-center justify-center rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700 text-gray-500 dark:text-gray-400 transition-colors"
  >
    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
    </svg>
  </button>
</div>

<form
  hx-<%= isEdit ? 'put' : 'post' %>="/ingredients<%= isEdit ? '/' + ingredient.slug : '' %>"
  hx-target="#ingredients-editor"
  hx-swap="innerHTML"
  class="flex-1 overflow-y-auto"
>
  <div class="p-6 space-y-5">
    <!-- Name -->
    <div>
      <label for="name" class="block text-sm font-medium text-gray-700 dark:text-gray-200 mb-2">
        Ingredient Name <span class="text-red-500">*</span>
      </label>
      <input
        type="text"
        id="name"
        name="name"
        value="<%= isEdit ? ingredient.name : '' %>"
        required
        class="w-full h-10 px-3 rounded-lg bg-gray-100 dark:bg-gray-700 border-0 text-gray-900 dark:text-white placeholder-gray-400 dark:placeholder-gray-500 focus:ring-2 focus:ring-blue-500"
        placeholder="e.g., Tomatoes, Flour, Cheese"
      />
    </div>

    <!-- Category & Supplier Row -->
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
      <!-- Category -->
      <div>
        <label for="category" class="block text-sm font-medium text-gray-700 dark:text-gray-200 mb-2">
          Category <span class="text-red-500">*</span>
        </label>
        <input
          type="text"
          id="category"
          name="category"
          value="<%= isEdit ? ingredient.category : '' %>"
          required
          class="w-full h-10 px-3 rounded-lg bg-gray-100 dark:bg-gray-700 border-0 text-gray-900 dark:text-white placeholder-gray-400 dark:placeholder-gray-500 focus:ring-2 focus:ring-blue-500"
          placeholder="e.g., Vegetables, Dairy"
        />
      </div>

      <!-- Supplier Dropdown -->
      <div>
        <label for="supplierId" class="block text-sm font-medium text-gray-700 dark:text-gray-200 mb-2">
          Supplier <span class="text-red-500">*</span>
        </label>
        <select
          id="supplierId"
          name="supplierId"
          required
          class="w-full h-10 px-3 rounded-lg bg-gray-100 dark:bg-gray-700 border-0 text-gray-900 dark:text-white focus:ring-2 focus:ring-blue-500"
        >
          <option value="">Select a supplier...</option>
          <% if (typeof suppliers !== 'undefined') { %>
            <% suppliers.forEach(supplier => { %>
              <option
                value="<%= supplier.slug %>"
                <%= isEdit && ingredient.supplierSlug === supplier.slug ? 'selected' : '' %>
              >
                <%= supplier.name %>
              </option>
            <% }); %>
          <% } %>
        </select>
      </div>
    </div>

    <hr class="border-gray-200 dark:border-gray-700" />
    <p class="text-xs text-gray-500 dark:text-gray-400 uppercase tracking-wide">Purchase Details</p>

    <!-- Purchase Cost & Unit Row -->
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
      <!-- Purchase Cost -->
      <div>
        <label for="purchaseCost" class="block text-sm font-medium text-gray-700 dark:text-gray-200 mb-2">
          Cost (pence) <span class="text-red-500">*</span>
        </label>
        <input
          type="number"
          id="purchaseCost"
          name="purchaseCost"
          value="<%= isEdit ? ingredient.purchaseCost : '' %>"
          required
          min="0"
          step="1"
          class="w-full h-10 px-3 rounded-lg bg-gray-100 dark:bg-gray-700 border-0 text-gray-900 dark:text-white placeholder-gray-400 dark:placeholder-gray-500 focus:ring-2 focus:ring-blue-500"
          placeholder="e.g., 350 for Â£3.50"
        />
      </div>

      <!-- Purchase Unit -->
      <div>
        <label for="purchaseUnit" class="block text-sm font-medium text-gray-700 dark:text-gray-200 mb-2">
          Per Unit <span class="text-red-500">*</span>
        </label>
        <input
          type="text"
          id="purchaseUnit"
          name="purchaseUnit"
          value="<%= isEdit ? ingredient.purchaseUnit : '' %>"
          required
          class="w-full h-10 px-3 rounded-lg bg-gray-100 dark:bg-gray-700 border-0 text-gray-900 dark:text-white placeholder-gray-400 dark:placeholder-gray-500 focus:ring-2 focus:ring-blue-500"
          placeholder="e.g., 1kg, 500ml, box"
        />
      </div>
    </div>

    <!-- VAT Checkbox -->
    <div class="flex items-start gap-3">
      <input
        type="checkbox"
        id="includesVat"
        name="includesVat"
        <%= isEdit && ingredient.includesVat ? 'checked' : '' %>
        class="mt-1 h-4 w-4 rounded border-gray-300 dark:border-gray-600 text-blue-600 focus:ring-blue-500"
      />
      <div>
        <label for="includesVat" class="text-sm font-medium text-gray-700 dark:text-gray-200 cursor-pointer">
          Price includes VAT
        </label>
        <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">
          Check if the purchase cost already includes VAT
        </p>
      </div>
    </div>

    <!-- Conversion Rule -->
    <div>
      <label for="conversionRule" class="block text-sm font-medium text-gray-700 dark:text-gray-200 mb-2">
        Conversion Rule
      </label>
      <input
        type="text"
        id="conversionRule"
        name="conversionRule"
        value="<%= isEdit && ingredient.conversionRule ? ingredient.conversionRule : '' %>"
        class="w-full h-10 px-3 rounded-lg bg-gray-100 dark:bg-gray-700 border-0 text-gray-900 dark:text-white placeholder-gray-400 dark:placeholder-gray-500 focus:ring-2 focus:ring-blue-500"
        placeholder="e.g., 1 box = 24 bags"
      />
      <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">
        Optional: Custom unit conversion for non-standard units
      </p>
    </div>

    <!-- Notes -->
    <div>
      <label for="notes" class="block text-sm font-medium text-gray-700 dark:text-gray-200 mb-2">
        Notes
      </label>
      <textarea
        id="notes"
        name="notes"
        rows="3"
        class="w-full px-3 py-2 rounded-lg bg-gray-100 dark:bg-gray-700 border-0 text-gray-900 dark:text-white placeholder-gray-400 dark:placeholder-gray-500 focus:ring-2 focus:ring-blue-500 resize-none"
        placeholder="Additional notes..."
      ><%= isEdit && ingredient.notes ? ingredient.notes : '' %></textarea>
    </div>
  </div>

  <!-- Modal Footer -->
  <div class="flex items-center justify-end gap-3 px-6 py-4 border-t border-gray-200 dark:border-gray-700">
    <button
      type="button"
      onclick="closeModal()"
      class="px-4 py-2 text-sm font-medium text-gray-700 dark:text-gray-200 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-lg transition-colors"
    >
      Cancel
    </button>
    <button
      type="submit"
      class="inline-flex items-center gap-2 px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 transition-colors"
    >
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
      </svg>
      <%= isEdit ? 'Update Ingredient' : 'Create Ingredient' %>
    </button>
  </div>
</form>

<script>
  // Close modal after successful form submission
  document.body.addEventListener('htmx:afterRequest', function(event) {
    if (event.detail.successful && event.target.tagName === 'FORM') {
      closeModal();
      showToast('<%= isEdit ? 'Ingredient updated successfully' : 'Ingredient created successfully' %>', 'success');
    }
  });
</script>
