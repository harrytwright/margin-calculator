<%
  const isEdit = typeof supplier !== 'undefined' && supplier !== null
%>

<!-- Modal Header -->
<div class="flex items-center justify-between px-6 py-4 border-b border-gray-200 dark:border-gray-700">
  <div>
    <h2 class="text-lg font-semibold text-gray-900 dark:text-white">
      <%= isEdit ? 'Edit Supplier' : 'Add Supplier' %>
    </h2>
    <p class="text-sm text-gray-500 dark:text-gray-400 mt-0.5">
      <%= isEdit ? 'Update supplier details' : 'Add a new ingredient supplier' %>
    </p>
  </div>
  <button
    onclick="closeModal()"
    class="w-8 h-8 flex items-center justify-center rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700 text-gray-500 dark:text-gray-400 transition-colors"
  >
    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
    </svg>
  </button>
</div>

<form
  hx-<%= isEdit ? 'put' : 'post' %>="/suppliers<%= isEdit ? '/' + supplier.slug : '' %>"
  hx-target="#main-content"
  hx-swap="innerHTML"
  class="flex-1 overflow-y-auto"
>
  <div class="p-6 space-y-5">
    <!-- Name -->
    <div>
      <label for="name" class="block text-sm font-medium text-gray-700 dark:text-gray-200 mb-2">
        Supplier Name <span class="text-red-500">*</span>
      </label>
      <input
        type="text"
        id="name"
        name="name"
        value="<%= isEdit ? supplier.name : '' %>"
        required
        class="w-full h-10 px-3 rounded-lg bg-gray-100 dark:bg-gray-700 border-0 text-gray-900 dark:text-white placeholder-gray-400 dark:placeholder-gray-500 focus:ring-2 focus:ring-blue-500"
        placeholder="e.g., ASDA, Tesco, Costco"
      />
    </div>

    <hr class="border-gray-200 dark:border-gray-700" />
    <p class="text-xs text-gray-500 dark:text-gray-400 uppercase tracking-wide">Contact Information</p>

    <!-- Contact Name -->
    <div>
      <label for="contactName" class="block text-sm font-medium text-gray-700 dark:text-gray-200 mb-2">
        Contact Name
      </label>
      <input
        type="text"
        id="contactName"
        name="contactName"
        value="<%= isEdit && supplier.contactName ? supplier.contactName : '' %>"
        class="w-full h-10 px-3 rounded-lg bg-gray-100 dark:bg-gray-700 border-0 text-gray-900 dark:text-white placeholder-gray-400 dark:placeholder-gray-500 focus:ring-2 focus:ring-blue-500"
        placeholder="e.g., John Smith"
      />
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
      <!-- Contact Email -->
      <div>
        <label for="contactEmail" class="block text-sm font-medium text-gray-700 dark:text-gray-200 mb-2">
          Email
        </label>
        <input
          type="email"
          id="contactEmail"
          name="contactEmail"
          value="<%= isEdit && supplier.contactEmail ? supplier.contactEmail : '' %>"
          class="w-full h-10 px-3 rounded-lg bg-gray-100 dark:bg-gray-700 border-0 text-gray-900 dark:text-white placeholder-gray-400 dark:placeholder-gray-500 focus:ring-2 focus:ring-blue-500"
          placeholder="orders@supplier.com"
        />
      </div>

      <!-- Contact Phone -->
      <div>
        <label for="contactPhone" class="block text-sm font-medium text-gray-700 dark:text-gray-200 mb-2">
          Phone
        </label>
        <input
          type="tel"
          id="contactPhone"
          name="contactPhone"
          value="<%= isEdit && supplier.contactPhone ? supplier.contactPhone : '' %>"
          class="w-full h-10 px-3 rounded-lg bg-gray-100 dark:bg-gray-700 border-0 text-gray-900 dark:text-white placeholder-gray-400 dark:placeholder-gray-500 focus:ring-2 focus:ring-blue-500"
          placeholder="+44 20 1234 5678"
        />
      </div>
    </div>

    <!-- Notes -->
    <div>
      <label for="notes" class="block text-sm font-medium text-gray-700 dark:text-gray-200 mb-2">
        Notes
      </label>
      <textarea
        id="notes"
        name="notes"
        rows="3"
        class="w-full px-3 py-2 rounded-lg bg-gray-100 dark:bg-gray-700 border-0 text-gray-900 dark:text-white placeholder-gray-400 dark:placeholder-gray-500 focus:ring-2 focus:ring-blue-500 resize-none"
        placeholder="Additional notes about this supplier..."
      ><%= isEdit && supplier.notes ? supplier.notes : '' %></textarea>
    </div>
  </div>

  <!-- Modal Footer -->
  <div class="flex items-center justify-end gap-3 px-6 py-4 border-t border-gray-200 dark:border-gray-700">
    <button
      type="button"
      onclick="closeModal()"
      class="px-4 py-2 text-sm font-medium text-gray-700 dark:text-gray-200 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-lg transition-colors"
    >
      Cancel
    </button>
    <button
      type="submit"
      class="inline-flex items-center gap-2 px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 transition-colors"
    >
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
      </svg>
      <%= isEdit ? 'Update Supplier' : 'Create Supplier' %>
    </button>
  </div>
</form>

<script>
  // Close modal after successful form submission
  document.body.addEventListener('htmx:afterRequest', function(event) {
    if (event.detail.successful && event.target.tagName === 'FORM') {
      closeModal();
      showToast('<%= isEdit ? 'Supplier updated successfully' : 'Supplier created successfully' %>', 'success');
    }
  });
</script>
