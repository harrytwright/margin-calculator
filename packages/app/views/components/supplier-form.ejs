<!-- Supplier Form Modal Content -->
<div class="modal-header bg-gray-50 px-6 py-4 border-b border-gray-200 rounded-t-lg">
  <div class="flex items-center justify-between">
    <h3 class="text-lg font-semibold text-gray-900">
      <%= supplier ? 'Edit Supplier' : 'Add New Supplier' %>
    </h3>
    <button
      onclick="closeModal()"
      class="text-gray-400 hover:text-gray-600 transition-colors"
    >
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>
  </div>
</div>

<form
  hx-<%= supplier ? 'put' : 'post' %>="/management/suppliers<%= supplier ? '/' + supplier.slug : '' %>"
  hx-target="#entity-list"
  hx-swap="innerHTML"
  class="flex-1 overflow-y-auto"
>
  <div class="px-6 py-4 space-y-4">
    <!-- Name -->
    <div>
      <label for="name" class="block text-sm font-medium text-gray-700 mb-1">
        Supplier Name <span class="text-red-500">*</span>
      </label>
      <input
        type="text"
        id="name"
        name="name"
        value="<%= supplier ? supplier.name : '' %>"
        required
        class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
        placeholder="e.g., ASDA, Tesco, Costco"
      />
    </div>

    <!-- Contact Name -->
    <div>
      <label for="contactName" class="block text-sm font-medium text-gray-700 mb-1">
        Contact Name
      </label>
      <input
        type="text"
        id="contactName"
        name="contactName"
        value="<%= supplier ? (supplier.contactName || '') : '' %>"
        class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
        placeholder="e.g., John Smith"
      />
    </div>

    <!-- Contact Email -->
    <div>
      <label for="contactEmail" class="block text-sm font-medium text-gray-700 mb-1">
        Contact Email
      </label>
      <input
        type="email"
        id="contactEmail"
        name="contactEmail"
        value="<%= supplier ? (supplier.contactEmail || '') : '' %>"
        class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
        placeholder="e.g., orders@supplier.com"
      />
    </div>

    <!-- Contact Phone -->
    <div>
      <label for="contactPhone" class="block text-sm font-medium text-gray-700 mb-1">
        Contact Phone
      </label>
      <input
        type="tel"
        id="contactPhone"
        name="contactPhone"
        value="<%= supplier ? (supplier.contactPhone || '') : '' %>"
        class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
        placeholder="e.g., +44 20 1234 5678"
      />
    </div>

    <!-- Notes -->
    <div>
      <label for="notes" class="block text-sm font-medium text-gray-700 mb-1">
        Notes
      </label>
      <textarea
        id="notes"
        name="notes"
        rows="3"
        class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
        placeholder="Additional notes about this supplier..."
      ><%= supplier ? (supplier.notes || '') : '' %></textarea>
    </div>
  </div>

  <!-- Modal Footer -->
  <div class="modal-footer bg-gray-50 px-6 py-4 border-t border-gray-200 rounded-b-lg flex justify-end gap-3">
    <button
      type="button"
      onclick="closeModal()"
      class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-blue-500"
    >
      Cancel
    </button>
    <button
      type="submit"
      class="px-4 py-2 text-sm font-medium text-white bg-blue-600 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500"
    >
      <%= supplier ? 'Update Supplier' : 'Create Supplier' %>
    </button>
  </div>
</form>

<script>
  // Close modal after successful form submission
  document.body.addEventListener('htmx:afterRequest', function(event) {
    if (event.detail.successful && event.target.tagName === 'FORM') {
      closeModal();
      showToast('<%= supplier ? 'Supplier updated successfully' : 'Supplier created successfully' %>', 'success');
    }
  });
</script>
