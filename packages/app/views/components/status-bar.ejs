<%
  const viewLabels = {
    recipes: 'Recipes',
    ingredients: 'Ingredients',
    suppliers: 'Suppliers',
    settings: 'Settings',
    help: 'Help',
  }

  const breadcrumbItems = breadcrumb || [{ label: viewLabels[currentView] || currentView }]
%>

<!-- Status Bar -->
<footer class="h-6 bg-white dark:bg-gray-800 border-t border-gray-200 dark:border-gray-700 flex items-center justify-between px-4 text-xs shrink-0">
  <!-- Left: Breadcrumb -->
  <div class="flex items-center gap-1 text-gray-500 dark:text-gray-400">
    <% breadcrumbItems.forEach((item, index) => { %>
      <% if (index > 0) { %>
      <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
      </svg>
      <% } %>
      <% if (item.href) { %>
      <a href="<%= item.href %>" class="hover:text-gray-700 dark:hover:text-gray-200 transition-colors">
        <%= item.label %>
      </a>
      <% } else { %>
      <span class="<%= index === breadcrumbItems.length - 1 ? 'text-gray-700 dark:text-gray-200' : '' %>">
        <%= item.label %>
      </span>
      <% } %>
    <% }) %>
  </div>

  <!-- Right: Limits and Version -->
  <div class="flex items-center gap-4 text-gray-400 dark:text-gray-500">
    <% if (typeof limits !== 'undefined' && limits) { %>
    <span title="Usage limits">
      <%= limits.used %> / <%= limits.total %>
    </span>
    <% } %>
    <span>v0.3</span>
  </div>
</footer>
