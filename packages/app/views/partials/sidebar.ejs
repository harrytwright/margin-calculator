<%
  const isManagement = view === 'management'
  const currentType = typeof type !== 'undefined' ? type : ''
  const demoMode = typeof isDemo !== 'undefined' && isDemo
%>

<!-- Sidebar -->
<aside class="w-72 bg-neutral flex flex-col relative overflow-hidden">
  <!-- Decorative accent line -->
  <div class="absolute top-0 left-0 w-1 h-full bg-gradient-to-b from-primary via-primary/50 to-transparent"></div>

  <!-- Logo/Header -->
  <div class="px-6 py-6 border-b border-neutral-content/10">
    <div class="flex items-center gap-3">
      <!-- Logo mark -->
      <div class="w-10 h-10 rounded-xl bg-primary flex items-center justify-center shadow-warm">
        <svg class="w-6 h-6 text-primary-content" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
        </svg>
      </div>
      <div>
        <h1 class="text-lg font-display text-neutral-content tracking-tight">Menu Book</h1>
        <% if (demoMode) { %>
          <span class="text-xs font-medium text-warning">Demo Mode</span>
        <% } else { %>
          <span class="text-xs text-neutral-content/50">Recipe Costing</span>
        <% } %>
      </div>
    </div>
  </div>

  <!-- Navigation -->
  <nav class="flex-1 px-4 py-6 space-y-2 overflow-y-auto">
    <!-- Dashboard -->
    <a
      href="/dashboard"
      hx-get="/dashboard"
      hx-target="#content-area"
      hx-push-url="true"
      class="group flex items-center gap-3 px-4 py-3 rounded-xl transition-all duration-200 <%= view === 'dashboard' ? 'bg-primary text-primary-content shadow-warm' : 'text-neutral-content/70 hover:bg-neutral-content/10 hover:text-neutral-content' %>"
    >
      <div class="w-9 h-9 rounded-lg <%= view === 'dashboard' ? 'bg-primary-content/20' : 'bg-neutral-content/10 group-hover:bg-neutral-content/15' %> flex items-center justify-center transition-colors">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z"/>
        </svg>
      </div>
      <span class="font-medium">Dashboard</span>
    </a>

    <!-- Divider with label -->
    <div class="pt-4 pb-2">
      <span class="px-4 text-xs font-semibold uppercase tracking-wider text-neutral-content/40">Data</span>
    </div>

    <!-- Management Section -->
    <div class="space-y-1">
      <button
        id="management-toggle"
        class="group flex items-center justify-between w-full px-4 py-3 rounded-xl transition-all duration-200 <%= isManagement ? 'bg-neutral-content/10 text-neutral-content' : 'text-neutral-content/70 hover:bg-neutral-content/10 hover:text-neutral-content' %>"
      >
        <div class="flex items-center gap-3">
          <div class="w-9 h-9 rounded-lg <%= isManagement ? 'bg-secondary/20' : 'bg-neutral-content/10 group-hover:bg-neutral-content/15' %> flex items-center justify-center transition-colors">
            <svg class="w-5 h-5 <%= isManagement ? 'text-secondary' : '' %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
            </svg>
          </div>
          <span class="font-medium">Management</span>
        </div>
        <svg
          id="management-chevron"
          class="w-4 h-4 transform transition-transform duration-200 <%= isManagement ? 'rotate-180' : '' %>"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
        </svg>
      </button>

      <!-- Sub-navigation -->
      <div id="management-subnav" class="<%= isManagement ? '' : 'hidden' %> ml-6 pl-6 border-l-2 border-neutral-content/10 space-y-1 py-2">
        <a
          href="/management/suppliers"
          hx-get="/management/suppliers"
          hx-target="#content-area"
          hx-push-url="true"
          class="flex items-center gap-2 px-3 py-2 rounded-lg text-sm transition-all duration-150 <%= (isManagement && currentType === 'suppliers') ? 'bg-secondary text-secondary-content font-medium' : 'text-neutral-content/60 hover:bg-neutral-content/10 hover:text-neutral-content' %>"
        >
          <span class="w-2 h-2 rounded-full <%= (isManagement && currentType === 'suppliers') ? 'bg-secondary-content' : 'bg-neutral-content/30' %>"></span>
          Suppliers
        </a>
        <a
          href="/management/ingredients"
          hx-get="/management/ingredients"
          hx-target="#content-area"
          hx-push-url="true"
          class="flex items-center gap-2 px-3 py-2 rounded-lg text-sm transition-all duration-150 <%= (isManagement && currentType === 'ingredients') ? 'bg-secondary text-secondary-content font-medium' : 'text-neutral-content/60 hover:bg-neutral-content/10 hover:text-neutral-content' %>"
        >
          <span class="w-2 h-2 rounded-full <%= (isManagement && currentType === 'ingredients') ? 'bg-secondary-content' : 'bg-neutral-content/30' %>"></span>
          Ingredients
        </a>
        <a
          href="/management/recipes"
          hx-get="/management/recipes"
          hx-target="#content-area"
          hx-push-url="true"
          class="flex items-center gap-2 px-3 py-2 rounded-lg text-sm transition-all duration-150 <%= (isManagement && currentType === 'recipes') ? 'bg-secondary text-secondary-content font-medium' : 'text-neutral-content/60 hover:bg-neutral-content/10 hover:text-neutral-content' %>"
        >
          <span class="w-2 h-2 rounded-full <%= (isManagement && currentType === 'recipes') ? 'bg-secondary-content' : 'bg-neutral-content/30' %>"></span>
          Recipes
        </a>
      </div>
    </div>

    <!-- Divider with label -->
    <div class="pt-4 pb-2">
      <span class="px-4 text-xs font-semibold uppercase tracking-wider text-neutral-content/40">Analytics</span>
    </div>

    <!-- Margin Calculator -->
    <a
      href="/margin"
      hx-get="/margin"
      hx-target="#content-area"
      hx-push-url="true"
      class="group flex items-center gap-3 px-4 py-3 rounded-xl transition-all duration-200 <%= view === 'margin' ? 'bg-primary text-primary-content shadow-warm' : 'text-neutral-content/70 hover:bg-neutral-content/10 hover:text-neutral-content' %>"
    >
      <div class="w-9 h-9 rounded-lg <%= view === 'margin' ? 'bg-primary-content/20' : 'bg-neutral-content/10 group-hover:bg-neutral-content/15' %> flex items-center justify-center transition-colors">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
        </svg>
      </div>
      <span class="font-medium">Margin Report</span>
    </a>

    <% if (!demoMode) { %>
    <!-- Divider with label -->
    <div class="pt-4 pb-2">
      <span class="px-4 text-xs font-semibold uppercase tracking-wider text-neutral-content/40">System</span>
    </div>

    <!-- Settings -->
    <a
      href="/settings"
      hx-get="/settings"
      hx-target="#content-area"
      hx-push-url="true"
      class="group flex items-center gap-3 px-4 py-3 rounded-xl transition-all duration-200 <%= view === 'settings' ? 'bg-primary text-primary-content shadow-warm' : 'text-neutral-content/70 hover:bg-neutral-content/10 hover:text-neutral-content' %>"
    >
      <div class="w-9 h-9 rounded-lg <%= view === 'settings' ? 'bg-primary-content/20' : 'bg-neutral-content/10 group-hover:bg-neutral-content/15' %> flex items-center justify-center transition-colors">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
        </svg>
      </div>
      <span class="font-medium">Settings</span>
    </a>

    <!-- Help -->
    <a
      href="/help"
      hx-get="/help"
      hx-target="#content-area"
      hx-push-url="true"
      class="group flex items-center gap-3 px-4 py-3 rounded-xl transition-all duration-200 <%= view === 'help' ? 'bg-primary text-primary-content shadow-warm' : 'text-neutral-content/70 hover:bg-neutral-content/10 hover:text-neutral-content' %>"
    >
      <div class="w-9 h-9 rounded-lg <%= view === 'help' ? 'bg-primary-content/20' : 'bg-neutral-content/10 group-hover:bg-neutral-content/15' %> flex items-center justify-center transition-colors">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
      </div>
      <span class="font-medium">Help</span>
    </a>
    <% } %>
  </nav>

  <!-- Footer -->
  <div class="p-4 border-t border-neutral-content/10">
    <div class="flex items-center justify-between px-2">
      <span class="text-xs text-neutral-content/40">v0.3</span>
      <div class="flex items-center gap-2">
        <button
          onclick="setTheme('menubook')"
          class="w-6 h-6 rounded-full bg-base-100 border-2 border-neutral-content/20 hover:border-primary transition-colors"
          title="Light theme"
        ></button>
        <button
          onclick="setTheme('menubookDark')"
          class="w-6 h-6 rounded-full bg-neutral border-2 border-neutral-content/20 hover:border-primary transition-colors"
          title="Dark theme"
        ></button>
      </div>
    </div>
  </div>

  <script>
    // Management submenu toggle
    document.getElementById('management-toggle')?.addEventListener('click', function() {
      const subnav = document.getElementById('management-subnav');
      const chevron = document.getElementById('management-chevron');
      subnav.classList.toggle('hidden');
      chevron.classList.toggle('rotate-180');
    });

    // Theme switcher function
    function setTheme(theme) {
      document.documentElement.setAttribute('data-theme', theme)
      localStorage.setItem('theme', theme)
    }
  </script>
</aside>
