<!-- Guided Tour Overlay -->
<div id="tour-overlay" class="fixed inset-0 z-50 hidden">
  <div
    id="tour-tooltip"
    class="absolute bg-white rounded-lg shadow-2xl p-6 max-w-md"
    style="top: 50%; left: 50%; transform: translate(-50%, -50%);"
  >
    <div class="flex justify-between items-start mb-4">
      <h3 id="tour-title" class="text-lg font-semibold text-gray-900"></h3>
      <button
        onclick="closeTour()"
        class="text-gray-400 hover:text-gray-600"
      >
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"/>
        </svg>
      </button>
    </div>
    <p id="tour-description" class="text-gray-600 mb-6"></p>
    <div class="flex justify-between items-center">
      <span id="tour-progress" class="text-sm text-gray-500"></span>
      <div class="space-x-3">
        <button
          id="tour-skip"
          onclick="closeTour()"
          class="px-4 py-2 text-sm font-medium text-gray-700 hover:text-gray-900"
        >
          Skip Tour
        </button>
        <button
          id="tour-next"
          onclick="nextTourStep()"
          class="px-4 py-2 text-sm font-medium text-white bg-blue-600 rounded-md hover:bg-blue-700"
        >
          Next
        </button>
      </div>
    </div>
  </div>
</div>

<script>
  function closeTour() {
    document.getElementById('tour-overlay').classList.add('hidden');
    localStorage.setItem('tour_completed', 'true');
  }

  function nextTourStep() {
    // Tour implementation will be added later
    closeTour();
  }
</script>
