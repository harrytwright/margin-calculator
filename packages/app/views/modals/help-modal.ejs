<!-- Help Modal -->
<div class="max-h-[80vh] overflow-hidden flex flex-col max-w-2xl">
  <!-- Modal Header -->
  <div class="flex items-center justify-between px-6 py-4 border-b border-gray-200 dark:border-gray-700 shrink-0">
    <div>
      <h2 class="text-lg font-semibold text-gray-900 dark:text-white">Help & Documentation</h2>
      <p class="text-sm text-gray-500 dark:text-gray-400 mt-0.5">Learn how to use Menu Book effectively</p>
    </div>
    <button
      onclick="closeModal()"
      class="w-8 h-8 flex items-center justify-center rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700 text-gray-500 dark:text-gray-400 transition-colors"
    >
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
      </svg>
