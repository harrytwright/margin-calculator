<%
  const selectedSupplier = typeof supplier !== 'undefined' ? supplier : null
  const linkedIngredients = typeof ingredients !== 'undefined' ? ingredients : []
%>

<% if (!selectedSupplier) { %>
<!-- Empty State -->
<div class="flex-1 flex items-center justify-center">
  <div class="text-center px-6">
    <div class="w-12 h-12 mx-auto mb-3 rounded-full bg-gray-100 dark:bg-gray-700 flex items-center justify-center">
      <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 15l-2 5L9 9l11 4-5 2zm0 0l5 5M7.188 2.239l.777 2.897M5.136 7.965l-2.898-.777M13.95 4.05l-2.122 2.122m-5.657 5.656l-2.12 2.122"/>
      </svg>
    </div>
    <p class="text-sm text-gray-500 dark:text-gray-400">Select a supplier to view details</p>
  </div>
</div>
<% } else { %>
<!-- Details Header -->
<div class="flex items-center justify-between px-4 py-3 border-b border-gray-200 dark:border-gray-700">
  <h3 class="text-sm font-medium text-gray-700 dark:text-gray-200">Details</h3>
  <div class="flex items-center gap-1">
    <button
      hx-get="/suppliers/<%= selectedSupplier.slug %>/edit"
      hx-target=".modal-content"
      onclick="openModal()"
      class="w-7 h-7 flex items-center justify-center rounded hover:bg-gray-100 dark:hover:bg-gray-700 text-gray-500 dark:text-gray-400"
      title="Edit"
    >
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
      </svg>
    </button>
    <button
      class="w-7 h-7 flex items-center justify-center rounded hover:bg-red-50 dark:hover:bg-red-900/20 text-gray-500 dark:text-gray-400 hover:text-red-600 dark:hover:text-red-400"
      onclick="confirmDeleteSupplier('<%= selectedSupplier.slug %>', '<%= selectedSupplier.name %>')"
      title="Delete"
    >
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
      </svg>
    </button>
  </div>
</div>

<!-- Details Content -->
<div class="flex-1 overflow-y-auto p-4">
  <div class="space-y-4">
    <!-- Name -->
    <div class="flex items-center gap-3">
      <div class="w-12 h-12 rounded-xl bg-blue-100 dark:bg-blue-900/30 flex items-center justify-center">
        <span class="text-lg font-semibold text-blue-600 dark:text-blue-400">
          <%= selectedSupplier.name.charAt(0).toUpperCase() %>
        </span>
      </div>
      <div>
        <h2 class="font-semibold text-gray-900 dark:text-white"><%= selectedSupplier.name %></h2>
        <p class="text-xs text-gray-500 dark:text-gray-400"><%= selectedSupplier.slug %></p>
      </div>
    </div>

    <!-- Contact Info -->
    <div class="space-y-3 pt-2">
      <% if (selectedSupplier.contactName) { %>
      <div class="flex items-start gap-3">
        <svg class="w-4 h-4 text-gray-400 mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
        </svg>
        <div>
          <p class="text-xs text-gray-500 dark:text-gray-400">Contact</p>
          <p class="text-sm text-gray-900 dark:text-white"><%= selectedSupplier.contactName %></p>
        </div>
      </div>
      <% } %>

      <% if (selectedSupplier.contactEmail) { %>
      <div class="flex items-start gap-3">
        <svg class="w-4 h-4 text-gray-400 mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
        </svg>
        <div>
          <p class="text-xs text-gray-500 dark:text-gray-400">Email</p>
          <a href="mailto:<%= selectedSupplier.contactEmail %>" class="text-sm text-blue-600 dark:text-blue-400 hover:underline"><%= selectedSupplier.contactEmail %></a>
        </div>
      </div>
      <% } %>

      <% if (selectedSupplier.contactPhone) { %>
      <div class="flex items-start gap-3">
        <svg class="w-4 h-4 text-gray-400 mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
        </svg>
        <div>
          <p class="text-xs text-gray-500 dark:text-gray-400">Phone</p>
          <a href="tel:<%= selectedSupplier.contactPhone %>" class="text-sm text-gray-900 dark:text-white"><%= selectedSupplier.contactPhone %></a>
        </div>
      </div>
      <% } %>

      <% if (selectedSupplier.notes) { %>
      <div class="flex items-start gap-3">
        <svg class="w-4 h-4 text-gray-400 mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
        </svg>
        <div>
          <p class="text-xs text-gray-500 dark:text-gray-400">Notes</p>
          <p class="text-sm text-gray-900 dark:text-white whitespace-pre-wrap"><%= selectedSupplier.notes %></p>
        </div>
      </div>
      <% } %>

      <% if (!selectedSupplier.contactName && !selectedSupplier.contactEmail && !selectedSupplier.contactPhone && !selectedSupplier.notes) { %>
      <div class="text-center py-4">
        <p class="text-sm text-gray-500 dark:text-gray-400">No contact information</p>
        <button
          hx-get="/suppliers/<%= selectedSupplier.slug %>/edit"
          hx-target=".modal-content"
          onclick="openModal()"
          class="mt-2 text-sm text-blue-600 dark:text-blue-400 hover:underline"
        >
          Add details
        </button>
      </div>
      <% } %>
    </div>
  </div>
</div>

<script>
  // Highlight selected row after HTMX swap
  selectSupplier('<%= selectedSupplier.slug %>');
</script>

<!-- Out-of-band swap for linked ingredients island -->
<div id="supplier-ingredients-oob" hx-swap-oob="outerHTML:#supplier-ingredients">
  <div id="supplier-ingredients" class="h-40 shrink-0">
    <div class="h-full bg-white dark:bg-gray-800 rounded-island shadow-island overflow-hidden">
      <div class="flex items-center justify-between px-4 py-2 border-b border-gray-200 dark:border-gray-700">
        <h3 class="text-sm font-medium text-gray-700 dark:text-gray-200">
          Ingredients from <%= selectedSupplier.name %>
          <span class="ml-2 text-gray-400 font-normal">(<%= linkedIngredients.length %>)</span>
        </h3>
      </div>
      <div class="p-3 overflow-x-auto">
        <% if (linkedIngredients.length === 0) { %>
        <div class="flex items-center justify-center h-20">
          <p class="text-sm text-gray-500 dark:text-gray-400">No ingredients from this supplier yet</p>
        </div>
        <% } else { %>
        <div class="flex gap-2 flex-wrap">
          <% linkedIngredients.forEach(ing => { %>
          <a
            href="/ingredients/<%= ing.slug %>"
            class="inline-flex items-center gap-2 px-3 py-2 bg-gray-50 dark:bg-gray-700/50 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors"
          >
            <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
            </svg>
            <span class="text-sm text-gray-700 dark:text-gray-200"><%= ing.name %></span>
            <% if (ing.purchaseCost != null) { %>
            <span class="text-xs text-gray-500 dark:text-gray-400">&pound;<%= (ing.purchaseCost / 100).toFixed(2) %></span>
            <% } %>
          </a>
          <% }) %>
        </div>
        <% } %>
      </div>
    </div>
  </div>
</div>
<% } %>
