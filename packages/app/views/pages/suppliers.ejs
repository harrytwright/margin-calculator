<%
  const supplierList = typeof suppliers !== 'undefined' ? suppliers : []
  const selectedSupplier = typeof supplier !== 'undefined' ? supplier : null
  const linkedIngredients = typeof ingredients !== 'undefined' ? ingredients : []
%>

<!-- Suppliers Page - Split View Layout -->
<div class="h-full flex flex-col gap-3">
  <!-- Main Content Area -->
  <div class="flex-1 flex gap-3 min-h-0">
    <!-- Left: Suppliers Table -->
    <div class="flex-1 min-w-0">
      <div
        id="suppliers-table"
        class="h-full flex flex-col bg-white dark:bg-gray-800 rounded-island shadow-island overflow-hidden"
      >
        <!-- Header -->
        <div class="flex items-center justify-between px-4 py-3 border-b border-gray-200 dark:border-gray-700">
          <div class="flex items-center gap-3">
            <h3 class="text-sm font-medium text-gray-700 dark:text-gray-200">Suppliers</h3>
            <span class="text-xs text-gray-500 dark:text-gray-400">
              <%= supplierList.length %> total
            </span>
          </div>
          <button
            hx-get="/suppliers/new"
            hx-target=".modal-content"
            onclick="openModal()"
            class="inline-flex items-center gap-1.5 px-3 py-1.5 text-sm font-medium text-white bg-blue-600 rounded-lg hover:bg-blue-700 transition-colors"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
            </svg>
            Add Supplier
          </button>
        </div>

        <!-- Search -->
        <div class="px-4 py-2 border-b border-gray-100 dark:border-gray-700/50">
          <div class="relative max-w-sm">
            <input
              type="text"
              placeholder="Search suppliers..."
              class="w-full h-8 pl-9 pr-4 text-sm rounded-lg bg-gray-100 dark:bg-gray-700 border-0 text-gray-700 dark:text-gray-200 placeholder-gray-400 dark:placeholder-gray-500 focus:ring-1 focus:ring-blue-500"
              id="suppliers-search"
              onkeyup="filterSuppliers()"
            />
            <svg class="absolute left-3 top-1/2 -translate-y-1/2 w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
            </svg>
          </div>
        </div>

        <!-- Table -->
        <div class="flex-1 overflow-auto">
          <% if (supplierList.length === 0) { %>
          <div class="flex items-center justify-center h-full">
            <div class="text-center px-8">
              <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-gray-100 dark:bg-gray-700 flex items-center justify-center">
                <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 17a2 2 0 100-4 2 2 0 000 4zm10 0a2 2 0 100-4 2 2 0 000 4z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 17H7V5h9v7h3l2 4v1h-3m-5 0H6"/>
                </svg>
              </div>
              <h3 class="text-lg font-medium text-gray-700 dark:text-gray-200 mb-1">No suppliers yet</h3>
              <p class="text-sm text-gray-500 dark:text-gray-400 mb-4">Add your first supplier to get started</p>
              <button
                hx-get="/suppliers/new"
                hx-target=".modal-content"
                onclick="openModal()"
                class="inline-flex items-center gap-2 px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 transition-colors"
              >
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                </svg>
                Add Supplier
              </button>
            </div>
          </div>
          <% } else { %>
          <table class="min-w-full">
            <thead class="bg-gray-50 dark:bg-gray-700/50 sticky top-0">
              <tr>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Name</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Contact</th>
                <th class="px-4 py-3 text-center text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Ingredients</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
              <% supplierList.forEach(s => { %>
              <tr
                data-supplier-row="<%= s.slug %>"
                hx-get="/suppliers/<%= s.slug %>"
                hx-target="#supplier-details"
                hx-push-url="true"
                onclick="selectSupplier('<%= s.slug %>')"
                class="supplier-row cursor-pointer transition-colors
                  <%= selectedSupplier && selectedSupplier.slug === s.slug
                    ? 'bg-blue-50 dark:bg-blue-900/20'
                    : 'hover:bg-gray-50 dark:hover:bg-gray-700/30'
                  %>"
              >
                <td class="px-4 py-3">
                  <div class="flex items-center gap-3">
                    <div class="w-8 h-8 rounded-lg bg-gray-100 dark:bg-gray-700 flex items-center justify-center">
                      <span class="text-sm font-medium text-gray-600 dark:text-gray-300">
                        <%= s.name.charAt(0).toUpperCase() %>
                      </span>
                    </div>
                    <div>
                      <p class="text-sm font-medium text-gray-900 dark:text-white"><%= s.name %></p>
                      <p class="text-xs text-gray-500 dark:text-gray-400"><%= s.slug %></p>
                    </div>
                  </div>
                </td>
                <td class="px-4 py-3">
                  <% if (s.contact || s.email || s.phone) { %>
                  <p class="text-sm text-gray-600 dark:text-gray-300"><%= s.contact || s.email || s.phone %></p>
                  <% } else { %>
                  <span class="text-sm text-gray-400">--</span>
                  <% } %>
                </td>
                <td class="px-4 py-3 text-center">
                  <span class="inline-flex items-center justify-center min-w-[24px] h-6 px-2 text-xs font-medium rounded-full bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-300">
                    <%= s.ingredientCount || 0 %>
                  </span>
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
          <% } %>
        </div>
      </div>
    </div>

    <!-- Right: Supplier Details -->
    <div class="w-80 shrink-0">
      <div
        id="supplier-details"
        class="h-full flex flex-col bg-white dark:bg-gray-800 rounded-island shadow-island overflow-hidden"
      >
        <% if (!selectedSupplier) { %>
        <!-- Empty State -->
        <div class="flex-1 flex items-center justify-center">
          <div class="text-center px-6">
            <div class="w-12 h-12 mx-auto mb-3 rounded-full bg-gray-100 dark:bg-gray-700 flex items-center justify-center">
              <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 15l-2 5L9 9l11 4-5 2zm0 0l5 5M7.188 2.239l.777 2.897M5.136 7.965l-2.898-.777M13.95 4.05l-2.122 2.122m-5.657 5.656l-2.12 2.122"/>
              </svg>
            </div>
            <p class="text-sm text-gray-500 dark:text-gray-400">Select a supplier to view details</p>
          </div>
        </div>
        <% } else { %>
        <!-- Details Header -->
        <div class="flex items-center justify-between px-4 py-3 border-b border-gray-200 dark:border-gray-700">
          <h3 class="text-sm font-medium text-gray-700 dark:text-gray-200">Details</h3>
          <div class="flex items-center gap-1">
            <button
              hx-get="/suppliers/<%= selectedSupplier.slug %>/edit"
              hx-target=".modal-content"
              onclick="openModal()"
              class="w-7 h-7 flex items-center justify-center rounded hover:bg-gray-100 dark:hover:bg-gray-700 text-gray-500 dark:text-gray-400"
              title="Edit"
            >
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
              </svg>
            </button>
            <button
              class="w-7 h-7 flex items-center justify-center rounded hover:bg-red-50 dark:hover:bg-red-900/20 text-gray-500 dark:text-gray-400 hover:text-red-600 dark:hover:text-red-400"
              onclick="confirmDeleteSupplier('<%= selectedSupplier.slug %>', '<%= selectedSupplier.name %>')"
              title="Delete"
            >
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
              </svg>
            </button>
          </div>
        </div>

        <!-- Details Content -->
        <div class="flex-1 overflow-y-auto p-4">
          <div class="space-y-4">
            <!-- Name -->
            <div class="flex items-center gap-3">
              <div class="w-12 h-12 rounded-xl bg-blue-100 dark:bg-blue-900/30 flex items-center justify-center">
                <span class="text-lg font-semibold text-blue-600 dark:text-blue-400">
                  <%= selectedSupplier.name.charAt(0).toUpperCase() %>
                </span>
              </div>
              <div>
                <h2 class="font-semibold text-gray-900 dark:text-white"><%= selectedSupplier.name %></h2>
                <p class="text-xs text-gray-500 dark:text-gray-400"><%= selectedSupplier.slug %></p>
              </div>
            </div>

            <!-- Contact Info -->
            <div class="space-y-3 pt-2">
              <% if (selectedSupplier.contact) { %>
              <div class="flex items-start gap-3">
                <svg class="w-4 h-4 text-gray-400 mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                </svg>
                <div>
                  <p class="text-xs text-gray-500 dark:text-gray-400">Contact</p>
                  <p class="text-sm text-gray-900 dark:text-white"><%= selectedSupplier.contact %></p>
                </div>
              </div>
              <% } %>

              <% if (selectedSupplier.email) { %>
              <div class="flex items-start gap-3">
                <svg class="w-4 h-4 text-gray-400 mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
                <div>
                  <p class="text-xs text-gray-500 dark:text-gray-400">Email</p>
                  <a href="mailto:<%= selectedSupplier.email %>" class="text-sm text-blue-600 dark:text-blue-400 hover:underline"><%= selectedSupplier.email %></a>
                </div>
              </div>
              <% } %>

              <% if (selectedSupplier.phone) { %>
              <div class="flex items-start gap-3">
                <svg class="w-4 h-4 text-gray-400 mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                </svg>
                <div>
                  <p class="text-xs text-gray-500 dark:text-gray-400">Phone</p>
                  <a href="tel:<%= selectedSupplier.phone %>" class="text-sm text-gray-900 dark:text-white"><%= selectedSupplier.phone %></a>
                </div>
              </div>
              <% } %>

              <% if (selectedSupplier.address) { %>
              <div class="flex items-start gap-3">
                <svg class="w-4 h-4 text-gray-400 mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
                <div>
                  <p class="text-xs text-gray-500 dark:text-gray-400">Address</p>
                  <p class="text-sm text-gray-900 dark:text-white whitespace-pre-line"><%= selectedSupplier.address %></p>
                </div>
              </div>
              <% } %>

              <% if (selectedSupplier.notes) { %>
              <div class="flex items-start gap-3">
                <svg class="w-4 h-4 text-gray-400 mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                </svg>
                <div>
                  <p class="text-xs text-gray-500 dark:text-gray-400">Notes</p>
                  <p class="text-sm text-gray-900 dark:text-white whitespace-pre-wrap"><%= selectedSupplier.notes %></p>
                </div>
              </div>
              <% } %>

              <% if (!selectedSupplier.contact && !selectedSupplier.email && !selectedSupplier.phone && !selectedSupplier.address && !selectedSupplier.notes) { %>
              <div class="text-center py-4">
                <p class="text-sm text-gray-500 dark:text-gray-400">No contact information</p>
                <button
                  hx-get="/suppliers/<%= selectedSupplier.slug %>/edit"
                  hx-target=".modal-content"
                  onclick="openModal()"
                  class="mt-2 text-sm text-blue-600 dark:text-blue-400 hover:underline"
                >
                  Add details
                </button>
              </div>
              <% } %>
            </div>
          </div>
        </div>
        <% } %>
      </div>
    </div>
  </div>

  <!-- Bottom Island: Linked Ingredients -->
  <div id="supplier-ingredients" class="h-40 shrink-0 <%= selectedSupplier ? '' : 'hidden' %>">
    <div class="h-full bg-white dark:bg-gray-800 rounded-island shadow-island overflow-hidden">
      <% if (selectedSupplier) { %>
      <div class="flex items-center justify-between px-4 py-2 border-b border-gray-200 dark:border-gray-700">
        <h3 class="text-sm font-medium text-gray-700 dark:text-gray-200">
          Ingredients from <%= selectedSupplier.name %>
          <span class="ml-2 text-gray-400 font-normal">(<%= linkedIngredients.length %>)</span>
        </h3>
      </div>
      <div class="p-3 overflow-x-auto">
        <% if (linkedIngredients.length === 0) { %>
        <div class="flex items-center justify-center h-20">
          <p class="text-sm text-gray-500 dark:text-gray-400">No ingredients from this supplier yet</p>
        </div>
        <% } else { %>
        <div class="flex gap-2 flex-wrap">
          <% linkedIngredients.forEach(ing => { %>
          <a
            href="/ingredients/<%= ing.slug %>"
            class="inline-flex items-center gap-2 px-3 py-2 bg-gray-50 dark:bg-gray-700/50 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors"
          >
            <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
            </svg>
            <span class="text-sm text-gray-700 dark:text-gray-200"><%= ing.name %></span>
            <% if (ing.purchaseCost != null) { %>
            <span class="text-xs text-gray-500 dark:text-gray-400">&pound;<%= (ing.purchaseCost / 100).toFixed(2) %></span>
            <% } %>
          </a>
          <% }) %>
        </div>
        <% } %>
      </div>
      <% } %>
    </div>
  </div>
</div>

<script>
  // Filter suppliers
  function filterSuppliers() {
    const filter = document.getElementById('suppliers-search').value.toLowerCase();
    const rows = document.querySelectorAll('.supplier-row');

    rows.forEach(row => {
      const text = row.textContent.toLowerCase();
      row.style.display = text.includes(filter) ? '' : 'none';
    });
  }

  // Select supplier
  function selectSupplier(slug) {
    document.querySelectorAll('[data-supplier-row]').forEach(el => {
      el.classList.remove('bg-blue-50', 'dark:bg-blue-900/20');
    });

    const row = document.querySelector(`[data-supplier-row="${slug}"]`);
    if (row) {
      row.classList.add('bg-blue-50', 'dark:bg-blue-900/20');
    }
  }

  // Confirm delete
  function confirmDeleteSupplier(slug, name) {
    if (confirm(`Are you sure you want to delete "${name}"? This action cannot be undone.`)) {
      htmx.ajax('DELETE', `/suppliers/${slug}`, {
        target: '#suppliers-table',
        swap: 'innerHTML'
      }).then(() => {
        document.getElementById('supplier-details').innerHTML = `
          <div class="flex-1 flex items-center justify-center">
            <div class="text-center px-6">
              <div class="w-12 h-12 mx-auto mb-3 rounded-full bg-gray-100 dark:bg-gray-700 flex items-center justify-center">
                <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 15l-2 5L9 9l11 4-5 2zm0 0l5 5M7.188 2.239l.777 2.897M5.136 7.965l-2.898-.777M13.95 4.05l-2.122 2.122m-5.657 5.656l-2.12 2.122"/>
                </svg>
              </div>
              <p class="text-sm text-gray-500 dark:text-gray-400">Select a supplier to view details</p>
            </div>
          </div>
        `;
        showToast('Supplier deleted successfully', 'success');
      });
    }
  }

  // Highlight selected item on page load
  <% if (selectedSupplier) { %>
  document.addEventListener('DOMContentLoaded', () => {
    selectSupplier('<%= selectedSupplier.slug %>');
  });
  <% } %>
</script>
