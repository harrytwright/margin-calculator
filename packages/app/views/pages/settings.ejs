<%
  const currentSettings = typeof settings !== 'undefined' ? settings : {}
  const showSuccess = typeof success !== 'undefined' && success
%>

<!-- Settings Page - Island Layout -->
<div class="h-full flex items-start justify-center overflow-auto py-8">
  <div class="w-full max-w-2xl px-4">
    <div class="bg-white dark:bg-gray-800 rounded-island shadow-island overflow-hidden">
      <!-- Header -->
      <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
        <h2 class="text-lg font-semibold text-gray-900 dark:text-white">Settings</h2>
        <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">Configure your pricing and margin preferences</p>
      </div>

      <!-- Success Message -->
      <% if (showSuccess) { %>
      <div class="mx-6 mt-4 p-3 bg-green-50 dark:bg-green-900/20 border border-green-200 dark:border-green-800 rounded-lg flex items-center gap-2">
        <svg class="w-5 h-5 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <span class="text-sm font-medium text-green-700 dark:text-green-300">Settings saved successfully!</span>
      </div>
      <% } %>

      <!-- Settings Form -->
      <form
        hx-post="/settings"
        hx-target="#main-content"
        hx-swap="innerHTML"
        class="p-6 space-y-6"
      >
        <!-- VAT Rate -->
        <div>
          <label for="vat" class="block text-sm font-medium text-gray-700 dark:text-gray-200 mb-2">
            VAT Rate
          </label>
          <div class="flex items-center gap-2">
            <input
              type="number"
              id="vat"
              name="vat"
              value="<%= currentSettings.vat ? (currentSettings.vat * 100).toFixed(0) : 20 %>"
              min="0"
              max="100"
              step="0.1"
              class="w-24 h-10 px-3 text-right rounded-lg bg-gray-100 dark:bg-gray-700 border-0 text-gray-900 dark:text-white focus:ring-2 focus:ring-blue-500"
            />
            <span class="text-gray-500 dark:text-gray-400 font-medium">%</span>
          </div>
          <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">
            Standard UK VAT is 20%. Enter the rate as a percentage.
          </p>
        </div>

        <hr class="border-gray-200 dark:border-gray-700" />

        <!-- Target Margin -->
        <div>
          <label for="marginTarget" class="block text-sm font-medium text-gray-700 dark:text-gray-200 mb-2">
            Target Margin
          </label>
          <div class="flex items-center gap-2">
            <input
              type="number"
              id="marginTarget"
              name="marginTarget"
              value="<%= currentSettings.marginTarget || 20 %>"
              min="0"
              max="100"
              step="0.1"
              class="w-24 h-10 px-3 text-right rounded-lg bg-gray-100 dark:bg-gray-700 border-0 text-gray-900 dark:text-white focus:ring-2 focus:ring-blue-500"
            />
            <span class="text-gray-500 dark:text-gray-400 font-medium">%</span>
          </div>
          <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">
            Recipes below this margin will be flagged as needing attention.
          </p>
        </div>

        <hr class="border-gray-200 dark:border-gray-700" />

        <!-- Default Price Includes VAT -->
        <div class="flex items-start gap-3">
          <input
            type="checkbox"
            id="defaultPriceIncludesVat"
            name="defaultPriceIncludesVat"
            <%= currentSettings.defaultPriceIncludesVat ? 'checked' : '' %>
            class="mt-1 h-4 w-4 rounded border-gray-300 dark:border-gray-600 text-blue-600 focus:ring-blue-500"
          />
          <div>
            <label for="defaultPriceIncludesVat" class="text-sm font-medium text-gray-700 dark:text-gray-200 cursor-pointer">
              Prices include VAT by default
            </label>
            <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">
              When enabled, new recipes will assume sell prices include VAT
            </p>
          </div>
        </div>

        <!-- Save Button -->
        <div class="pt-4">
          <button
            type="submit"
            class="inline-flex items-center gap-2 px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 transition-colors"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
            Save Settings
          </button>
        </div>
      </form>

      <!-- Info Section -->
      <div class="px-6 pb-6">
        <div class="p-4 bg-blue-50 dark:bg-blue-900/20 rounded-lg border border-blue-100 dark:border-blue-800">
          <div class="flex gap-3">
            <svg class="w-5 h-5 text-blue-600 dark:text-blue-400 shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <div>
              <h4 class="text-sm font-medium text-blue-900 dark:text-blue-200">Configuration File</h4>
              <p class="text-xs text-blue-700 dark:text-blue-300 mt-1">
                Settings are stored in <code class="bg-blue-100 dark:bg-blue-800/50 px-1 py-0.5 rounded">margin.toml</code> in your configuration directory. Changes apply immediately.
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Theme Settings -->
    <div class="mt-4 bg-white dark:bg-gray-800 rounded-island shadow-island overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
        <h2 class="text-lg font-semibold text-gray-900 dark:text-white">Appearance</h2>
        <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">Customize how Menu Book looks</p>
      </div>
      <div class="p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-700 dark:text-gray-200">Theme</p>
            <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">Choose between light and dark mode</p>
          </div>
          <div class="flex items-center gap-2">
            <button
              onclick="setTheme('light')"
              class="px-3 py-2 text-sm font-medium rounded-lg transition-colors
                dark:bg-gray-700 dark:text-gray-300 dark:hover:bg-gray-600
                bg-blue-100 text-blue-700"
            >
              <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"/>
              </svg>
              Light
            </button>
            <button
              onclick="setTheme('dark')"
              class="px-3 py-2 text-sm font-medium rounded-lg transition-colors
                bg-gray-100 text-gray-600 hover:bg-gray-200
                dark:bg-blue-900/30 dark:text-blue-400"
            >
              <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"/>
              </svg>
              Dark
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  // Auto-hide success message
  document.addEventListener('DOMContentLoaded', function() {
    const successMsg = document.querySelector('.bg-green-50, .dark\\:bg-green-900\\/20');
    if (successMsg) {
      setTimeout(() => {
        successMsg.style.opacity = '0';
        successMsg.style.transition = 'opacity 0.3s ease-out';
        setTimeout(() => successMsg.remove(), 300);
      }, 3000);
    }
  });
</script>
