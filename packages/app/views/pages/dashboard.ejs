<% if (typeof stats !== 'undefined' && stats) { %>
<div class="space-y-8">
  <!-- Summary Stats Grid -->
  <div class="grid grid-cols-2 xl:grid-cols-4 gap-4">
    <!-- Total Recipes -->
    <div class="card bg-base-100 border border-base-300/50 shadow-sm card-hover">
      <div class="card-body p-5">
        <div class="flex items-start justify-between">
          <div>
            <p class="text-sm font-medium text-base-content/60 uppercase tracking-wide">Total Recipes</p>
            <p class="text-4xl font-display text-base-content mt-2"><%= stats.totalRecipes %></p>
          </div>
          <div class="w-12 h-12 rounded-xl bg-primary/10 flex items-center justify-center">
            <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
          </div>
        </div>
      </div>
    </div>

    <!-- Average Margin -->
    <div class="card bg-base-100 border border-base-300/50 shadow-sm card-hover">
      <div class="card-body p-5">
        <div class="flex items-start justify-between">
          <div>
            <p class="text-sm font-medium text-base-content/60 uppercase tracking-wide">Avg Margin</p>
            <p class="text-4xl font-display text-secondary mt-2"><%= stats.averageMargin.toFixed(1) %><span class="text-2xl">%</span></p>
          </div>
          <div class="w-12 h-12 rounded-xl bg-secondary/10 flex items-center justify-center">
            <svg class="w-6 h-6 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
            </svg>
          </div>
        </div>
      </div>
    </div>

    <!-- Below Target -->
    <div class="card bg-base-100 border border-base-300/50 shadow-sm card-hover">
      <div class="card-body p-5">
        <div class="flex items-start justify-between">
          <div>
            <p class="text-sm font-medium text-base-content/60 uppercase tracking-wide">Below Target</p>
            <p class="text-4xl font-display text-error mt-2"><%= stats.belowTarget %></p>
            <p class="text-xs text-base-content/50 mt-1">recipes need attention</p>
          </div>
          <div class="w-12 h-12 rounded-xl bg-error/10 flex items-center justify-center">
            <svg class="w-6 h-6 text-error" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
            </svg>
          </div>
        </div>
      </div>
    </div>

    <!-- Meets Target -->
    <div class="card bg-base-100 border border-base-300/50 shadow-sm card-hover">
      <div class="card-body p-5">
        <div class="flex items-start justify-between">
          <div>
            <p class="text-sm font-medium text-base-content/60 uppercase tracking-wide">On Target</p>
            <p class="text-4xl font-display text-secondary mt-2"><%= stats.meetsTarget %></p>
            <p class="text-xs text-base-content/50 mt-1">recipes on track</p>
          </div>
          <div class="w-12 h-12 rounded-xl bg-secondary/10 flex items-center justify-center">
            <svg class="w-6 h-6 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Charts Grid -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Margin Distribution Chart -->
    <div class="card bg-base-100 border border-base-300/50 shadow-sm">
      <div class="card-body">
        <h3 class="font-display text-xl text-base-content mb-4">Margin Distribution</h3>
        <div style="height: 280px;">
          <canvas id="marginDistributionChart"></canvas>
        </div>
      </div>
    </div>

    <!-- Top 5 Profitable Recipes -->
    <div class="card bg-base-100 border border-base-300/50 shadow-sm">
      <div class="card-body">
        <h3 class="font-display text-xl text-base-content mb-4">Top Profitable</h3>
        <div style="height: 280px;">
          <canvas id="topProfitableChart"></canvas>
        </div>
      </div>
    </div>
  </div>

  <!-- Category Breakdown & Quick Actions -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Category Chart -->
    <div class="card bg-base-100 border border-base-300/50 shadow-sm">
      <div class="card-body">
        <h3 class="font-display text-xl text-base-content mb-4">Recipe Categories</h3>
        <div style="height: 280px;">
          <canvas id="categoryChart"></canvas>
        </div>
      </div>
    </div>

    <!-- Quick Actions -->
    <div class="card bg-base-100 border border-base-300/50 shadow-sm">
      <div class="card-body">
        <h3 class="font-display text-xl text-base-content mb-4">Quick Actions</h3>
        <div class="space-y-3">
          <a
            href="/management/recipes"
            hx-get="/management/recipes"
            hx-target="#content-area"
            hx-push-url="true"
            class="group flex items-center gap-4 p-4 rounded-xl bg-base-200 hover:bg-primary/10 transition-all duration-200"
          >
            <div class="w-10 h-10 rounded-lg bg-primary/10 group-hover:bg-primary/20 flex items-center justify-center transition-colors">
              <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
              </svg>
            </div>
            <div class="flex-1">
              <span class="font-medium text-base-content">View All Recipes</span>
              <p class="text-sm text-base-content/50">Manage your recipe collection</p>
            </div>
            <svg class="w-5 h-5 text-base-content/30 group-hover:text-primary group-hover:translate-x-1 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </a>

          <a
            href="/margin"
            hx-get="/margin"
            hx-target="#content-area"
            hx-push-url="true"
            class="group flex items-center gap-4 p-4 rounded-xl bg-base-200 hover:bg-secondary/10 transition-all duration-200"
          >
            <div class="w-10 h-10 rounded-lg bg-secondary/10 group-hover:bg-secondary/20 flex items-center justify-center transition-colors">
              <svg class="w-5 h-5 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <div class="flex-1">
              <span class="font-medium text-base-content">Margin Report</span>
              <p class="text-sm text-base-content/50">Analyze profitability</p>
            </div>
            <svg class="w-5 h-5 text-base-content/30 group-hover:text-secondary group-hover:translate-x-1 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </a>

          <a
            href="/management/ingredients"
            hx-get="/management/ingredients"
            hx-target="#content-area"
            hx-push-url="true"
            class="group flex items-center gap-4 p-4 rounded-xl bg-base-200 hover:bg-accent/10 transition-all duration-200"
          >
            <div class="w-10 h-10 rounded-lg bg-accent/20 group-hover:bg-accent/30 flex items-center justify-center transition-colors">
              <svg class="w-5 h-5 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"/>
              </svg>
            </div>
            <div class="flex-1">
              <span class="font-medium text-base-content">Manage Ingredients</span>
              <p class="text-sm text-base-content/50">Update costs and inventory</p>
            </div>
            <svg class="w-5 h-5 text-base-content/30 group-hover:text-accent group-hover:translate-x-1 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  // Store chart instances globally to prevent memory leaks
  window.dashboardCharts = window.dashboardCharts || {};

  // Custom chart colors matching our theme
  const chartColors = {
    primary: '#C85A38',
    primaryLight: 'rgba(200, 90, 56, 0.15)',
    secondary: '#2D5A47',
    secondaryLight: 'rgba(45, 90, 71, 0.15)',
    accent: '#D4A574',
    palette: [
      'rgba(200, 90, 56, 0.7)',
      'rgba(45, 90, 71, 0.7)',
      'rgba(212, 165, 116, 0.7)',
      'rgba(110, 156, 135, 0.7)',
      'rgba(247, 143, 110, 0.7)',
    ]
  };

  function initDashboardCharts() {
    // Only init if we're on the dashboard
    if (!document.getElementById('marginDistributionChart')) return;

    // Destroy existing charts before creating new ones
    if (window.dashboardCharts.marginChart) {
      window.dashboardCharts.marginChart.destroy();
    }
    if (window.dashboardCharts.topProfitChart) {
      window.dashboardCharts.topProfitChart.destroy();
    }
    if (window.dashboardCharts.categoryChart) {
      window.dashboardCharts.categoryChart.destroy();
    }

    // Margin Distribution Chart
    const marginCtx = document.getElementById('marginDistributionChart');
    if (marginCtx) {
      window.dashboardCharts.marginChart = new Chart(marginCtx, {
        type: 'bar',
        data: {
          labels: <%- JSON.stringify(stats.marginDistribution.map(d => d.range)) %>,
          datasets: [{
            label: 'Number of Recipes',
            data: <%- JSON.stringify(stats.marginDistribution.map(d => d.count)) %>,
            backgroundColor: chartColors.primaryLight,
            borderColor: chartColors.primary,
            borderWidth: 2,
            borderRadius: 6,
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: {
            legend: { display: false }
          },
          scales: {
            y: {
              beginAtZero: true,
              ticks: { stepSize: 1 },
              grid: { color: 'rgba(0,0,0,0.05)' }
            },
            x: {
              grid: { display: false }
            }
          }
        }
      });
    }

    // Top Profitable Recipes Chart
    const topProfitCtx = document.getElementById('topProfitableChart');
    if (topProfitCtx && <%= stats.topProfitable.length > 0 %>) {
      window.dashboardCharts.topProfitChart = new Chart(topProfitCtx, {
        type: 'bar',
        data: {
          labels: <%- JSON.stringify(stats.topProfitable.map(r => r.name)) %>,
          datasets: [{
            label: 'Margin (%)',
            data: <%- JSON.stringify(stats.topProfitable.map(r => r.margin.toFixed(1))) %>,
            backgroundColor: chartColors.secondaryLight,
            borderColor: chartColors.secondary,
            borderWidth: 2,
            borderRadius: 6,
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          indexAxis: 'y',
          plugins: {
            legend: { display: false }
          },
          scales: {
            x: {
              beginAtZero: true,
              grid: { color: 'rgba(0,0,0,0.05)' }
            },
            y: {
              grid: { display: false }
            }
          }
        }
      });
    }

    // Category Breakdown Chart
    const categoryCtx = document.getElementById('categoryChart');
    if (categoryCtx && <%= stats.categoryBreakdown.length > 0 %>) {
      window.dashboardCharts.categoryChart = new Chart(categoryCtx, {
        type: 'doughnut',
        data: {
          labels: <%- JSON.stringify(stats.categoryBreakdown.map(c => c.category)) %>,
          datasets: [{
            data: <%- JSON.stringify(stats.categoryBreakdown.map(c => c.count)) %>,
            backgroundColor: chartColors.palette,
            borderWidth: 0,
            hoverOffset: 4
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          cutout: '65%',
          plugins: {
            legend: {
              position: 'bottom',
              labels: {
                padding: 16,
                usePointStyle: true,
                pointStyle: 'circle'
              }
            }
          }
        }
      });
    }
  }

  // Call init immediately since this script runs when content is swapped
  initDashboardCharts();
</script>

<% } else { %>
<!-- Empty State -->
<div class="flex items-center justify-center min-h-[60vh]">
  <div class="text-center max-w-md">
    <div class="w-20 h-20 mx-auto mb-6 rounded-2xl bg-primary/10 flex items-center justify-center">
      <svg class="w-10 h-10 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
      </svg>
    </div>
    <h2 class="text-2xl font-display text-base-content mb-2">Welcome to Menu Book</h2>
    <p class="text-base-content/60 mb-8">
      Get started by adding your suppliers, ingredients, and recipes to see your margin analytics.
    </p>
    <div class="flex justify-center gap-3">
      <a
        href="/management/suppliers"
        hx-get="/management/suppliers"
        hx-target="#content-area"
        hx-push-url="true"
        class="btn btn-primary shadow-warm"
      >
        Add Supplier
      </a>
      <a
        href="/management/ingredients"
        hx-get="/management/ingredients"
        hx-target="#content-area"
        hx-push-url="true"
        class="btn btn-ghost"
      >
        Add Ingredient
      </a>
    </div>
  </div>
</div>
<% } %>
